<div>
  <% if ( typeof data.user !='undefined' ){ %>
    <% if(data.user.role=='admin' ) {%>
      <form action="/admin/getapplications" method="GET">
        <button type="submit">
          <h2>See all Pending Applications</h2>
        </button>
      </form>
      <% }} %>
</div>
<div>
  <% if ( typeof data.applications !='undefined' ){ %>
    <% data.applications.forEach(function(application) { %>

      <p>
        <%= application.id %>
          <%= application.name %>
            <%= application.role %>
      </p>

      <% }) %>
        <% } %>

</div>
