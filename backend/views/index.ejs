      <form action="/admin/showall" method="GET">
        <button type="submit">
          <h2>See all Entities</h2>
        </button>
      </form>
      <form action="/admin/getapplications" method="GET">
        <button type="submit" name="type" value="user">
          <h2>See all Pending User Applications</h2>
        </button>
        <button type="submit" name="type" value="org">
          <h2>See all Pending Org Applications</h2>
        </button>
      </form>
      <% }} %>
</div>

<div>
  <% if ( typeof data.applications !='undefined' ){ %>
    <% data.applications.forEach(function(application) { %>

      <p>
        <%= application.id %>
          <%= application.name %>
            <%= application.role %>
      </p>

      <% }) %>
        <% } %>
          <% if ( typeof data.all !='undefined' ){ %>
            <% data.all.users.forEach(function(application) { %>

              <p>
                <%= application.id %>
                  <%= application.name %>
                    <%= application.email %>
              </p>

              <% }) %>
                <% data.all.orgs.forEach(function(application) { %>

                  <p>
                    <%= application.id %>
                      <%= application.name %>
                        <%= application.domain %>
                  </p>

                  <% }) %>
                    <% } %>
</div>
